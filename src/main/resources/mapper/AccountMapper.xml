<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.driving.dao.AccountDao" >
  <resultMap id="BaseResultMap" type="com.driving.model.Account" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="phone" property="phone" jdbcType="VARCHAR" />
    <result column="wx_account" property="wx_account" jdbcType="VARCHAR" />
    <result column="login_password" property="login_password" jdbcType="VARCHAR" />
    <association property="user" column="account_id"
                 javaType="com.driving.model.User">
      <id column="ID" property="ID" jdbcType="VARCHAR" />
      <result column="account_id" property="accountId" jdbcType="VARCHAR" />
      <result column="name" property="name" jdbcType="VARCHAR" />
      <result column="img" property="img" jdbcType="VARCHAR" />
      <result column="district" property="district" jdbcType="VARCHAR" />
    </association>
  </resultMap>
  <!--<sql id="Base_Column_List" >
    user_id, user_name, password, phone
  </sql>
  -->

  <!-- 登录-->
  <select id="login" resultMap="BaseResultMap">
    SELECT  a.id,a.phone,wx_account,u.name,u.img,u.district FROM account a LEFT JOIN user u
    ON a.id = u.account_id
    WHERE a.phone = #{phone} AND a.login_password = #{password}
  </select>

  <insert id="insertAccount" parameterType="com.driving.model.Account" >
    <selectKey keyProperty="id" resultType="java.lang.String"
               order="BEFORE">
      select UUID()
    </selectKey>
    INSERT INTO account (id,phone,login_password) VALUES (#{id},#{phone},#{login_password})
    /*INSERT INTO user (id,account_id,name) VALUES (#{id},#{account.id},#{name})*/
  </insert>

 <!-- 查询Account-->
  <select id="findAllAccount" resultType="com.driving.model.Account">
    SELECT  id,phone,wx_account,login_password FROM account
  </select>

  <!--查询Account的ID-->
  <select id="findAccount" resultType="com.driving.model.Account">
    SELECT  id,phone,wx_account,login_password FROM account
  </select>

  <!--添加Account，自动生成id-->
  <insert id="insertAccount" parameterType="com.driving.model.Account" >
    <selectKey keyProperty="id" resultType="java.lang.String"
               order="BEFORE">
      select UUID()
    </selectKey>
    INSERT INTO
    account
    (id,phone,wx_account,login_password)
    VALUES
    ( #{id},#{phone}, #{wx_account},#{login_password})
  </insert>

  <!--根据id删除Account-->
  <delete id="deleteAccountById" parameterType="java.lang.String">
    delete from
    account
    where id
    = #{id}
  </delete>

  <update id="updateAccount" parameterType="java.lang.String">
    update account
    <set>
      <if test="login_password!=null">login_password=#{login_password}</if>
    </set>
    where id = #{id}
  </update>

</mapper>